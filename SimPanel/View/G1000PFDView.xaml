                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding FMSOuterAngle}"/>
                        </Image.RenderTransform>
                    </Image>

                    <Image x:Name="FMSInner_Button" Cursor="Hand" PreviewMouseWheel="FMSInner_Button_PreviewMouseWheel" Source="/SimPanel;component/Resources/G1000/plain_knob_inner.png"  HorizontalAlignment="Left" Margin="16,16,0,0" VerticalAlignment="Top" Height="47" RenderTransformOrigin="0.5,0.5" MouseDown="AS1000_PFD_FMS_Upper_PUSH" MouseWheel="AS1000_PFD_FMS_Upper_DEC" >
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding FMSInnerAngle}"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>


                <!--<Rectangle x:Name="BC_Button" Cursor="Hand" Fill="Black" RadiusX="4" RadiusY="4" Width="43"  Height="27" Opacity="0.3" MouseDown="AP_Button_MouseDown" HorizontalAlignment="Left" Margin="84,521,0,0" VerticalAlignment="Top" />-->

